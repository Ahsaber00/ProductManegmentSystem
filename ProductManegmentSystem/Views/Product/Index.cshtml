
@{
    @model IEnumerable<Product>
}

<center>
    <h1>Products Portal</h1>
</center>
<a href="~/Product/Create" class="btn btn-success">Create New</a>
<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Category Name</th>
            <th scope="col">Image</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Quantity'</td>
                <td>@product.Category.Name</td>
                <td><img src="/products/@product.ImageFileName" width="100" alt="Alternate Text" /></td>
               
               

                <th scope="col">
                    <a asp-controller="Product" asp-action="ViewDetails" asp-route-id="@product.Id" class="btn btn-primary mx-2">View</a>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning mx-2">Edit</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-2">Delete</a>
                </th>
            </tr>
        }

    </tbody>
</table>

