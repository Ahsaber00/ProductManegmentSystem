
@{
    @model Product
}

<h2 class="text-danger">Delete Product</h2>

<p class="text-danger">Are you sure you want to delete this Product?</p>

<div>
    <h4>@Model.Title</h4>
</div>

<hr />

<div class="row">
    <div class="col-2">
        <h5>Description</h5>
    </div>
    <div class="col-10">@Model.Description</div>
</div>

<div class="row">
    <div class="col-2">
        <h5>Price</h5>
    </div>
    <div class="col-10">@Model.Price</div>
</div>

<div class="row">
    <div class="col-2">
        <h5>Category name</h5>
    </div>
    <div class="col-10">@Model.Category!.Name</div>
</div>

<div class="row">
    <div class="col-2">
        <h5>Quantity</h5>
    </div>
    <div class="col-10">@Model.Quantity</div>
</div>
<br />

<div class="row">
    <div class="col-2">
        <h5>Image</h5>
    </div>
    <div class="col-10"><img src="/products/@Model.ImageFileName" alt="Alternate Text" width="150" /> </div>
</div>

<hr />

<form asp-action="Delete" >
    <input type="hidden" asp-for="Id" />
    <input type="submit" name="confirm" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-primary" role="button" >Cancel</a>
</form>
