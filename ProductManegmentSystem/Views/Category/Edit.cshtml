@{
    @model Category

}
<center>
    <h1>Edit category</h1>
</center>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <div class="form-group mt-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" value="@Model.Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="my-4">
        <input type="submit" name="name" value="Edit Category" class="btn btn-primary" />
        <a asp-controller="Category" asp-action="Index" role="button" class="btn btn-outline-dark">Cancel</a>
    </div>



</form>